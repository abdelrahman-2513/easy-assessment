{
    "version": 2,
    "buildCommand": "cd backend && npm run build",
    "outputDirectory": "backend/dist",
    "builds": [
        {
            "src": "backend/dist/main.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/dist/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/dist/main.js"
        }
    ]
}